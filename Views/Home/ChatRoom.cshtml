@using Chat.Models
@model ChatModel
<div id="RefreshArea">
    @{
        Html.RenderPartial("History", Model);
    }
</div>

@Ajax.ActionLink("ActionLink", "Index", new { user = "", logOn = "", logOff = "", chatMessage = "" },
new AjaxOptions { UpdateTargetId = "RefreshArea", OnSuccess = "ChatOnSuccess", OnFailure = "ChatOnFailure" },
new { @id = "ActionLink", @style = "visibility:hidden;" })

<div id="inputForm">
    
        <div>
            <textarea id="txtMessage" rows="3"></textarea>
           
        </div>
        <div id="buttons">
            <button id="btnMessage" class="btn btn-success" value="Отправить">Отправить</button>
            <button id="btnLogOff" class="btn btn-danger" value="Выйти">Выйти</button>
        </div>
    
</div>
